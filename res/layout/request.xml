<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<!-- Title TextView-->
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
     	android:textSize="30sp"
		android:layout_margin="10dp" android:text="@string/titleBusStopRequest"/>
		
	<!-- Status EditText -->
	<EditText android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1"
		android:hint="@string/hintText" android:id="@+id/editTextStatus"
		android:gravity="top|center_horizontal"></EditText>
		
	<!-- Update Button -->
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/buttonGetStops"
		android:textSize="20sp" android:id="@+id/buttonGetStops"></Button>

</LinearLayout>
